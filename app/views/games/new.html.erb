<h1 class="text-center">New game</h1> <br> <br> <br>

<div class="container ">
  <div class="row ">
    <div class="col">
      <% @letters.each do |letter| %>
      <div class="blue-box"><%= letter %></div>
      <% end %>
    </div>
  </div>
</div>
<br><br>
<form action="/score" method="POST" data-turbo="false" >
  <div class="form-group row">
    <label for="guess" class="col-sm-3 col-form-label">What the longest word you can find! </label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name= "word" id="guess" placeholder="Tape your word here">
    </div>
    <button type="submit" class="btn btn-primary">play</button>
  </div>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
</form>
